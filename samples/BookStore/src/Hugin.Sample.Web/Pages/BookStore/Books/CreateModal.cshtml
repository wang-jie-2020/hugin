@page
@using Hugin.Sample.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal

@model LG.NetCore.Sample.Web.Pages.BookStore.Books.CreateModalModel
@inject IStringLocalizer<SampleResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Book" asp-page="/BookStore/Books/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewBook"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
